{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Encode",
      "program": "${workspaceRoot}/index.js",
      "cwd": "${workspaceRoot}",
      "args": [ 
        "encode", "hex", "255 255 0", "rgb"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "decode jwt",
      "program": "${workspaceRoot}/index.js",
      "cwd": "${workspaceRoot}",
      "args": [ 
        "encode", "jwt", "asdfasdf", "secret", "-s", "./aa"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Encode jwt path",
      "program": "${workspaceRoot}/index.js",
      "cwd": "${workspaceRoot}",
      "args": [ 
        "encode", "jwt", "./file.js"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Encode base64 asdf",
      "program": "${workspaceRoot}/index.js",
      "cwd": "${workspaceRoot}",
      "args": [ 
        "encode", "base64", "asdf"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Break",
      "program": "${workspaceRoot}/index.js",
      "cwd": "${workspaceRoot}",
      "args": [ 
        "break"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha.cmd"
      },
      "runtimeArgs": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceRoot}/test"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
  ]
}